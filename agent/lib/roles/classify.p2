/*jslint node: true */
'use strict';
/*global p2*/

p2

/**
 * @module classify
 *
 * @description
 * Role: classify
 * ==============
 * ```javascript
 * p2
 * .classify('classification')
 * ```
 * Classify this node.
 */
.role('classify', {
  facts: function (deferred, facts_so_far, title, opts) {
    var facts = {
      p2role: {
        classify: {
          loaded: true
        }
      },
      agent_classes: (facts_so_far.agent_classes || {})
    };

    facts.agent_classes[title] = true;

    deferred.resolve(facts);
  },

  p2: function (title, opts) {
    // XXX: dummy - forces fact method above
  }

});
