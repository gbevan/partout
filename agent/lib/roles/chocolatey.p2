/*jslint node: true */
'use strict';
/*global p2*/

p2

/**
 * chocolatey role
 * Options:
 *    ensure: 'present'
 */
.role('chocolatey', {
  p2: function (title, opts) {
    p2

    .node(function (f) { return f.os_family === 'windows' && opts.ensure === 'present'; })
    .powershell('(iex ((new-object net.webclient).DownloadString(\'https://chocolatey.org/install.ps1\')))>$null 2>&1')

    ;
  }
})

;
